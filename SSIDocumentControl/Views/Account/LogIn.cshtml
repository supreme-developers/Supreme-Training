
@model LoginViewModel

@{
    Layout = "_LoginLayout";
}

<div class="row">
    <div class="col-sm-6 offset-3">
        <div class="card" style="width:300px" >
            
            <img class="card-img-top" src="../images/docControlLogo.png" alt="Document Control">
            
            <div class="card-body">
                <form asp-controller="Account" asp-action="Login" method="post" class="form-horizontal"
                    asp-route-returnurl="@Context.Request.Query["ReturnUrl"]" role="form">
               
                    <div class="form-group ">

                        <label asp-for="User" class="control-label "></label>
                        <input asp-for="User" class="form-control input-lg" />
                        <span asp-validation-for="User" class="text-danger"></span>

                    </div>

                    <div class="form-group">

                        <label asp-for="Password" class="control-label "></label>
                        <input asp-for="Password" class="form-control input-lg" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="form-group btn-group-lg ">
                        <div class="col-md-offset-8 ">
                            <input type="submit" class="btn btn-danger btn-block text-white" value="Sign In" />
                        </div>
                    </div>

                </form>

            </div>
        </div>
        </div>
    </div>
